    "sinon": "^4.4.6",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
